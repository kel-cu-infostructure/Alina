<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="Simple" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Pattern -->
            <charset>UTF-8</charset>
            <pattern>
                %nopex[%d{HH:mm:ss}] \(%logger{0}\) [%level]: %msg%n%ex
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="Simple"/>
    </root>

</configuration>